# ============================================================================
# API CONFIGURATION
# ============================================================================
# Copy this file to .env and customize as needed
# Usage: export $(cat .env | xargs)

# Model Configuration
MODEL_VERSION=v3_causal
MODEL_STAGE=production
DECISION_THRESHOLD=0.20

# MLflow Configuration  
# MLFLOW_TRACKING_URI=sqlite:///mlflow.db
# MLFLOW_TRACKING_URI=http://mlflow-server:5000  # For remote MLflow

# Risk Stratification Thresholds
RISK_THRESHOLD_CRITICAL=0.40
RISK_THRESHOLD_HIGH=0.20
RISK_THRESHOLD_MODERATE=0.10

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# ADVANCED CONFIGURATION (Optional - has defaults)
# ============================================================================

